<body style="background-color: #EFEFEF;">
  <div class="container" style="background-color: #FFF;">
    <h3>Editando: <%= @user.name %></h3>
    <br/>

    <%= form_tag "../update_user/#{@user.id}" do |f| %>

      <div class="form-group">
        Email:
        <%= email_field_tag :email, @user.email, autofocus: true, autocomplete: "email", :class => 'form-control' %>
        <small id="emailHelp" class="form-text text-muted">NÃ£o alterar isto sem o consentimento do dono.</small>
      </div>

      <div class="form-group">
        Nome:
        <%= text_field_tag :name, @user.name, :class => 'form-control' %>
      </div>

      <div class="form-group">
        Dinheiro:
        <%= number_field_tag :money, @user.money, :step => "0.01", :class => 'form-control' %>
      </div>

      <div class="form-group">
        Dinheiro bloqueado:
        <%= number_field_tag :blocked_money, @user.blocked_money, :step => "0.01", :class => 'form-control' %>
      </div>

      <br/>

      <div class="actions">
        <%= submit_tag "Atualizar", :class => 'btn btn-success' %>
      </div>
    <% end %>
    <br/>
  </div>
</body>
