
<div class="container mt-4 pb-4" style="background-color: #FFF;">
  <div class='row pt-3'>
    <h3>Editando configs</h3>
  </div>

  <% if @updated_configs %>
    <div class='row pt-3 pb-3'>
      <div class="alert alert-success text-center" role="alert">
        Configurações atualizadas.
      </div>
    </div>
  <% end %>

  <div class='row pt-3 pb-3'>
    <%= form_tag "../admin/config_page" do |f| %>
      <div class="form-group">
        Add max value:
        <%= number_field_tag :max_value, @admin.add_value_max, :class => 'form-control' %>
      </div>

      <div class="form-group">
        Add min value:
        <%= number_field_tag :min_value, @admin.add_value_min, :class => 'form-control' %>
      </div>

      <br/>

      <div class="actions">
        <%= submit_tag "Atualizar", :class => 'btn btn-success' %>
      </div>
    <% end %>
    <br/>
  </div>
</div>