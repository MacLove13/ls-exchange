<div class="container mt-4" style="background-color: #FFF;">
  <div class="row">
    <div class='col-md-6 pt-4'>
      <h2>Registrar</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <hr>
        <div class="form-group">
          <%= f.label 'Nome de usuário:' %> <font size='1'>(Utilize o nome de seu personagem)</font><br />
          <%= f.text_field :name, autofocus: true, :class => 'form-control' %>
        </div>

        <div class="field mt-4">
          <%= f.label 'Celular:' %> <font size='1'>(Utilize o seu celular IC)</font><br />
          <%= f.text_field :cellphone, :class => 'form-control' %>
        </div>

        <div class="field mt-4">
          <%= f.label 'Email:' %><br />
          <%= f.email_field :email, autocomplete: "email", :class => 'form-control' %>
        </div>

        <div class="field mt-4">
          <%= f.label 'Senha:' %> <font size='1'>(As senhas são criptografadas! Não use a mesma do AD)</font>
          <% if @minimum_password_length %>
          <font size='1'>(No mínimo <%= @minimum_password_length %> caracteres)</font>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", :class => 'form-control' %>
        </div>

        <div class="field mt-3">
          <%= f.label 'Confirme a sua senha:' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control' %>
        </div>

        <br/>

        <div class="actions">
          <%= f.submit "Registrar", :class => 'btn btn-success' %>
        </div>
      <% end %>

      <br/>

      <%= render "devise/shared/links" %>
    
      <br/>
    </div>
    <div class='col-md-6'>
    
    </div>
  </div>
</div>